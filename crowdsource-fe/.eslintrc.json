{
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/strict",
    "plugin:jest/recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "globals": {
    "fetchMock": true,
    "CROWDSOURCE_FE_NODE_CONFIG": true
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": 0,
    "@typescript-eslint/no-unused-vars": 2,
    "no-undef": 2,
    "import/no-extraneous-dependencies": 2,
    "import/no-unresolved": 2,
    "react/jsx-uses-react": 0,
    "react/react-in-jsx-scope": 0,
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "import/no-internal-modules": [
      "error",
      {
        "allow": ["*/*"]
      }
    ],
    "import/no-duplicates": ["error", { "considerQueryString": true }],
    "import/no-useless-path-segments": [
      "error",
      {
        "noUselessIndex": true
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "next/link",
            "message": "Please use 'components/Link' instead."
          },
          {
            "name": "react-bootstrap",
            "message": "Please use 'react-bootstrap/*' components instead. Eg. 'react-bootstrap/Button'"
          }
        ]
      }
    ],
    "@typescript-eslint/consistent-type-imports": 2,
    "@next/next/no-img-element": 2
  },
  "overrides": [
    {
      "files": ["src/**/*.test.{js,jsx,ts,tsx}"],
      "rules": {
        "import/no-internal-modules": [
          "error",
          {
            "allow": ["utils/testUtils", "next/router", "__fixtures__/mockComponentsWithSideEffects"]
          }
        ]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
