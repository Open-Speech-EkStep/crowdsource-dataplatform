<!doctype html>
<html>

<head>
    <title>Crowd Sourcing Platform</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/layout.css">
</head>

<body>

    <header>
        <a href="/">Crowd Sourcing Platform</a>
    </header>
    <div class="container">
        <div class="d-flex j-center">
            <div class="col-6 card">
                <div class="d-flex j-center">
                    <h1>Speaker Characteristics</h1>
                </div>
                <div class="d-flex j-center">
                    <div class="col-3">
                        <label for="gender">Gender</label>
                    </div>
                    <div class="col-3">
                        <select name="gender" id="gender">
                            <option>
                                Please Select
                            </option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex j-center">
                    <div class="col-3">
                        <label for="age">Age</label>
                    </div>
                    <div class="col-3">
                        <select type="text" id="age">
                            <option>
                                Please Select
                            </option>
                            <option value="13 - 17">13 - 17 (Youth)</option>
                            <option value="18 - 29">18 - 29 (Adult)</option>
                            <option value="30 - 39">30 - 39 (Adult)</option>
                            <option value="40 - 49">40 - 49 (Adult)</option>
                            <option value="50 - 59">50 - 59 (Adult)</option>
                            <option value="60 - 64">60 - 64 (Adult)</option>
                            <option value="65 - 74">65 - 74 (Senior)</option>
                            <option value="> 75">&gt; 75 (Senior)</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex j-center">
                    <button class="button1" href="/record" id="start-record">Start Recording</button>
                </div>
            </div>
        </div>
    </div>




    <script src="js/index.js"></script>
</body>

</html>