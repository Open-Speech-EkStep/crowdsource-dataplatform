@objects
    header                                 css    header[data-testid=Header]
    chromextension                         css    div[data-testid=ChromeExtension]
    extensionText                          xpath  //div[@data-testid='ChromeExtension']//span
    installnow                             xpath  //div[@data-testid='ChromeExtension']//a[1]
    watchvideoButton                       xpath  //div[@data-testid='ChromeExtension']//button[1]
    DekhoIndiabreadCrumbs                  xpath  //div[@data-testid='Breadcrumbs']
    reportButton                           xpath  //*[@data-testid="reportIconAlt_button"]
    labelheading                           xpath  //*[@data-testid='DekhoValidate']//span
    imageview                               xpath //div[@data-testid='ImageView']/div
    editbox                                xpath  //div[@data-testid='TextEditArea']
    expandviewbutton                       xpath //button[@data-testid='ExpandView']
    needschange                             xpath  //button[contains(text(),'Needs Change')]
    correct                                 xpath  //button[contains(text(),'Correct')]
    skip                                   xpath  //button[contains(text(),'Skip')]
    tracker                                xpath  //*/div/div[5]/div/div
    footer                                 css    footer[data-testid=Footer]


= Likho Contribute Page =
    
    chromextension:
        @on Desktop
            below header
            above DekhoIndiabreadCrumbs 16px           
    

    extensionText:
        @on Desktop
            inside chromextension
            text is "Get Chrome extension to type in any language you choose"
            css font-size is "16px"          

    installnow:
        @on Desktop
            inside chromextension
            text is "Install Now"  
            css font-size is "16px"         


    watchvideoButton:
        @on Desktop
            inside chromextension
            right-of installnow 41px  
            width 163px         
            

    DekhoIndiabreadCrumbs:
        @on Desktop
            below header
            height 42px
            width 264px
        
        @on Mobile
            below header
            height 42px
            width 460px

    reportButton:
        @on Desktop
            below header
            height 32px
            width 98px
        
        @on Mobile
            below header
            height 32px
            width 48px

    labelheading:
        @on Desktop
            below extensionText
            text is "Is the text from the image captured correctly?


        @on Mobile
            below header
            text is "Is the text from the image captured correctly?"
            css font-size is "16px"

    
    imageview:
        @on Desktop
            below labelheading 19px
            above editbox 52px

        @on Mobile
            below labelheading 11px
            above editbox 36px

    
    expandviewbutton:
        @on Desktop
            below imageview 4px
            above editbox 32px

        @on Mobile
            below imageview 4px
            above editbox 16px

    
    editbox:
        @on Desktop
            height 167px
            width 1296px

        @on Mobile
            height 166px
            width 460px

    
    needschange:
        @on Desktop
            below editbox 60px
            left-of correct 48px
            above skip 72px
            height 48px
            width 240px
            

        @on Mobile
            below editbox 48px
            above correct 16px
            height 44px
            width 460px           
    
    correct:
        @on Desktop
            right-of needschange 48px
            below editbox 60px
            above skip 72px
            height 48px
            width 240px

        @on Mobile
            above skip 24px
            below needschange 16px
            height 44px
            width 460px

    skip:
        @on Desktop
            below needschange 72px
            below correct 72px
            above tracker 87px
            height 48px
            width 200px

        @on Mobile
            below correct 24px
            above tracker 55px
            height 44px
            width 460px

    tracker:
        @on Desktop
            below skip 87px
            above footer 39px
            width 1251px

        @on Mobile
            below skip 55px
            above footer 39px
            width 415px