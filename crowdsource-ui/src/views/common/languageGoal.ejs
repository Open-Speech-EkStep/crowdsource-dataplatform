<div class="col-lg-10 col-md-12 col-10 d-flex flex-column flex-lg-row flex-md-row align-items-center" id="language-goal">
    <span class="downloadable_badges">
    </span>
    <span class="mt-3 mt-lg-0 mt-md-0 sentence_away_msg" id="sentence_away_msg">
        <%- __(`${TEXT} <b id="sentence-away-count"></b> <b>${TEXT2}</b> to earn your <span id="sentence_away_badge"></span> Badge.`)%>
    </span>
    <span class="badges_information mt-3 mt-lg-0 mt-md-0 mb-2 mb-lg-0 mb-md-0">
        <button class="m-0 p-0 btn border-0" disabled="disabled" data-badge="bronze" href="#" id="<%= `bronze_badge_link` %>">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" class="mr-lg-1 mr-md-1" alt="bronze" height="52" width="42" id="<%= `bronze_badge_link_img`%>">
        </button>
        <button class="m-0 p-0 btn border-0" disabled="disabled" data-badge="silver" href="#" id="<%= `silver_badge_link` %>">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="silver" height="52" width="42" class="disable mr-lg-1 mr-md-1" id="<%= `silver_badge_link_img`%>">
        </button>
        <button class="m-0 p-0 btn border-0" disabled="disabled" data-badge="gold" href="#" id="<%= `gold_badge_link` %>">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="gold" height="52" width="42" class="disable mr-lg-1 mr-md-1" id="<%= `gold_badge_link_img`%>">
        </button>
        <button class="m-0 p-0 btn border-0" disabled="disabled" data-badge="platinum" href="#" id="<%= `platinum_badge_link` %>">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="platinum" height="52" width="42" class="disable mr-lg-1 mr-md-1" id="<%= `platinum_badge_link_img`%>">
        </button>
    </span>
    <a href="../badges.html" class="thankyou-Know-More mt-4 mt-lg-0 mt-md-0 pl-lg-2 pl-md-2 mb-2 mb-lg-0 mb-md-0">
        <%= __('Know More') %>
    </a>
    <a href="<%= url %> " class="btn btn-custom-primary rounded-pill btn-lg h6 float-right mb-0 mt-4 mt-lg-0 mt-md-0">
        <%= ButtonText %>
    </a>
</div>
