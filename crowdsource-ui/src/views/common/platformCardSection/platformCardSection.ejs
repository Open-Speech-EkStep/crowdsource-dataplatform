                        <li id="boloTab" role="presentation" data-target="#carouselExampleIndicators" data-slide-to="1"><a href="#" class="text-decoration-none" aria-controls="bolo" role="tab" data-toggle="tab"><%= __('Bolo India')%></a></li>
