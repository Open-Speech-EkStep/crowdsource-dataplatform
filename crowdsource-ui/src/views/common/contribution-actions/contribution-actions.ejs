<link rel="stylesheet" type="text/css" href="../../css/common/contribution-actions.css">
<div class="row justify-content-center contribution-actions-container">
  <div class="contribution-actions__btn-cotainer">
    <button type="button" class="btn btn-outline-primary h6 contribution-actions__btn" id="<%= `${secondary}_id` %>">
      <%= __(`${secondary}`) %>
    </button>
  </div>
  <div class="play-btn-container">
    <div>
      <button type="button" class="btn btn-primary play-btn" id="<%= `${play}_id` %>">
        <svg width="16" height="20" viewBox="0 0 16 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 4V0L3 5L8 10V6C11.31 6 14 8.69 14 12C14 15.31 11.31 18 8 18C4.69 18 2 15.31 2 12H0C0 16.42 3.58 20 8 20C12.42 20 16 16.42 16 12C16 7.58 12.42 4 8 4Z" fill="white"/>
        </svg>
      </button>
    </div>
    <div class="play-btn-label">
      <label class="h5" for="<%= play %>"><%= __(`${play}`) %></label>
    </div>
  </div>
  <div class="contribution-actions__btn-cotainer">
    <button type="button" class="btn btn-primary h6 contribution-actions__btn" id="<%= `${primary}_id` %>">
      <%= __(`${primary}`) %>
    </button>
  </div>
</div>

<div class="row justify-content-center align-items-center">
  <div class="skip-btn h6" id="Skip_id"><%= __('Skip') %> </div>
</div>
